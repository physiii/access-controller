# Bind address for the tunnel TCP server (ESP32 devices connect here)
TUNNEL_BIND=0.0.0.0

# Port exposed for ESP32 tunnel clients
TUNNEL_PORT=9001

# Bind address for the HTTP proxy (browsers / API clients connect here)
HTTP_BIND=0.0.0.0

# Port exposed for public HTTP traffic
HTTP_PORT=9000

# Maximum time (ms) to wait for a device response before returning 504
REQUEST_TIMEOUT_MS=15000

# Optional: require devices to send an IDENTIFY message before staying connected (set to 1/true to enable)
# REQUIRE_IDENTIFY=false

# How often to send heartbeat pings to connected devices (ms)
HEARTBEAT_INTERVAL_MS=20000

# Maximum size of HTTP request bodies (bytes)
MAX_REQUEST_BODY_BYTES=5242880

# Logging verbosity: debug, info, warn, error
LOG_LEVEL=info

